
<div>
    <div>
      <div class="container">
         <div class ="cover mb-4 d-flex align-items-center justify-content-center">
          <h1>My Profile</h1>
         </div>
          <div class="d-flex row justify-content-center">
            <div class="col-lg-4">
               <div class="card bg-light my-3">
                    <div class="card-body d-flex align-items-center">
                      <h2 class="card-title fw-bolder"> <%= @boyfriend.first_name %> <%= @boyfriend.last_name %> </h2>
                        </div>
                          <ul class="list-group list-group-flush">
                           <li class="list-group-item">Description: <em>"<%= @boyfriend.boyfriend_description%>"</em></li>
                           <li class="list-group-item"> Category: <%= @boyfriend.category %>
                           <li class="list-group-item">Age: <%= @boyfriend.age %></li>
                           <li class="list-group-item"> Email: <%=@boyfriend.email %></li>
                           <li class="list-group-item"> Contact Number: <%= @boyfriend.phone_number %></li>
                          </ul>
                           <%= link_to "Book!", new_boyfriend_booking_path(@boyfriend), class: 'text-center', class: 'btn btn-gradient m-4'%>
                </div>
            </div>
          </div>
        <%= link_to 'Back',:back, class: 'btn btn-gradient' %>
      </div>
    </div>
</div>
