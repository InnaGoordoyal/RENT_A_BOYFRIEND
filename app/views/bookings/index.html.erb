<div class="container py-5 mb-40">
  <div class ="d-flex align-item-center justify-content-center mb-4">
    <br>
   <h1><strong>Congratulations, Your booking has been confirmed!</strong></h1>
   <ol>
  </div>

  <div class= " bg-white rounded shadow h-100 card-body align-items-center py-5 form-new">
    <% @bookings.each do |booking| %>
      <h2><em><%= booking.boyfriend.first_name %> <%= booking.boyfriend.last_name %></em>
      <br>
      <br>
      <p>Start Date: <%= booking.start_date %></p>
      <p>End Date: <%= booking.end_date %></p>

     <div class= "btn btn-light">
       <%=link_to "Delete", booking_path(booking), method: :delete %>
     </div>
       <hr>
    <%end%>
    </ol>
  </div>
</div>
